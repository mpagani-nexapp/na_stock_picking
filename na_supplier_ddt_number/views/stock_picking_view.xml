<odoo>
    <record id="na_supplier_ddt_number_view_picking_form_inherit" model="ir.ui.view">
        <field name="name">na.supplier.ddt.number.view.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='note']" position="after">
                <page string="Delivery info" attrs="{'invisible': [('picking_type_code', '=', 'outgoing')]}">
                    <group>
                        <field name="ddt_supplier_number"/>
                        <field name="ddt_supplier_date"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>