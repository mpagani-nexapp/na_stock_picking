<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_picking_form_view" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="l10n_it_delivery_note.stock_picking_form_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='delivery_note']" position="attributes">
                    <attribute name="attrs">{'invisible': [('picking_type_code', '!=', 'outgoing')]}</attribute>
                </xpath>
                <xpath expr="//page[@name='extra']" position="after">
                 <page string="TD Info" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}">
                     <group>
                         <field name="ddt_supplier_number"/>
                         <field name="ddt_supplier_date"/>
                     </group>
                 </page>
            </xpath>
            </data>
        </field>
    </record>
</odoo>